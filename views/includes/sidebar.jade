- let verify, verify2, verify3, verify4 = false
if url === '/home'
    - verify = true
    - verify2, verify3, verify4 = false
else if url === '/layers_dashboard'
    - verify2 = true
    - verify, verify3, verify4 = false
else if url === '/settings' || url === '/settings/categories' || url === '/settings/roles' || url === '/settings/permissions' || url === '/settings/routes' || url === '/settings/page-settings' || url === '/settings/directions' || url === '/settings/departments'
    - verify4 = true
    -verify, verify2, verify3 = false
else if url === '/users_dashboard'
    - verify3 = true
    - verify, verify2, verify4 = false


aside(class='compact-nav fixed group overflow-hidden left-0 top-0 z-10 h-screen w-[calc(3.73rem)] border-r border-gray-300/40 bg-white dark:bg-gray-900 dark:border-gray-700 hover:w-56 hover:shadow-2xl')
    div(class='h-full flex flex-col justify-between')
        div
            //- div(class='h-16 border-b border-gray-300/40 dark:border-gray-700 flex items-center justify-center')
            //- div(class='py-4 px-2 border-t border-gray-300/40 dark:border-gray-700')
            div(class='py-3 px-2.5 h-16 border-b border-gray-300/40 dark:border-gray-700')
                a(href='#')
                    div(class='w-max flex items-center gap-4')
                        -let src = "../assets/users/pictures/profile.png"
                        img(class='w-10 h-10 rounded-full' src=`${src}`  alt='')
                        div
                            h6#nombre(class='text-gray-600 font-medium dark:text-gray-200') !{cookies.user_name}
                            span#userType(class='block -mt-0.5 text-xs text-gray-500 dark:text-white') !{cookies.role_description}
                //- a(href='home' class='block w-max px-2.5')
                //-     img(class='w-auto h-10 rounded-full' src='./assets/img/profile.png' alt='')
            div(class='mt-6')
                ul(class='px-1 -ml-px space-y-4 font-medium tracking-wide')
                    li(class=verify ? 'w-max space-y-4 group-hover:w-full' : 'w-max')
                        a(href='/home' class=verify ? 'block py-3 w-[52px] rounded-full bg-sky-500 group-hover:w-full' : 'none')
                            div(class=verify ? 'w-max flex items-center px-3 gap-4' : 'flex items-center gap-4 px-4 py-3')
                                svg(class='h-7 w-7 fill-white dark:fill-gray-100' xmlns="http://www.w3.org/2000/svg" class="bi bi-map-fill" viewBox="0 0 16 16")
                                    path(fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.598-.49L10.5.99 5.598.01a.5.5 0 0 0-.196 0l-5 1A.5.5 0 0 0 0 1.5v14a.5.5 0 0 0 .598.49l4.902-.98 4.902.98a.502.502 0 0 0 .196 0l5-1A.5.5 0 0 0 16 14.5V.5zM5 14.09V1.11l.5-.1.5.1v12.98l-.402-.08a.498.498 0 0 0-.196 0L5 14.09zm5 .8V1.91l.402.08a.5.5 0 0 0 .196 0L11 1.91v12.98l-.5.1-.5-.1z")
                                span(class='text-white') SIGCAPDAM
                    li(class=verify2 ? 'w-max space-y-4 group-hover:w-full' : 'w-max')
                        a(href='/layers_dashboard' class=verify2 ? 'block py-3 w-[52px] rounded-full bg-sky-500 group-hover:w-full' : 'none')
                            div(class=verify2 ? 'w-max flex items-center px-3 gap-4' : 'flex items-center gap-4 px-4 py-3')
                                svg(class='h-7 w-7 fill-white dark:fill-gray-100' xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-pin-map-fill" viewBox="0 0 16 16")
                                    path(fill-rule="evenodd" d="M3.1 11.2a.5.5 0 0 1 .4-.2H6a.5.5 0 0 1 0 1H3.75L1.5 15h13l-2.25-3H10a.5.5 0 0 1 0-1h2.5a.5.5 0 0 1 .4.2l3 4a.5.5 0 0 1-.4.8H.5a.5.5 0 0 1-.4-.8z")
                                    path(fill-rule="evenodd" d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999z")
                                span(class='text-white') Gest. de capas
                    if cookies.role_name === 'root' || cookies.role_name === 'admin'                
                        li(class=verify3 ? 'w-max space-y-4 group-hover:w-full' : 'w-max')
                            a(href='/users_dashboard' class=verify3 ? 'block py-3 w-[52px] rounded-full bg-sky-500 group-hover:w-full' : 'none')
                                div(class=verify3 ? 'w-max flex items-center px-3 gap-4' : 'flex items-center gap-4 px-4 py-3')
                                    svg(class='h-7 w-7 fill-white dark:fill-gray-100' xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16")
                                        path(d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5")
                                    span(class='text-white') Gest. usuarios
                        li(class=verify4 ? 'w-max space-y-4 group-hover:w-full' : 'w-max')
                            a(href='/settings' class=verify4 ? 'block py-3 w-[52px] rounded-full bg-sky-500 group-hover:w-full' : 'none')
                                div(class=verify4 ? 'w-max flex items-center px-3 gap-4' : 'flex items-center gap-4 px-4 py-3')
                                    svg(xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-7 w-7 fill-white dark:fill-gray-100 bi bi-gear-fill" viewBox="0 0 16 16")
